{
  "name": "helloworld-server",
  "version": "1.0.0",
  "description": "Hello World Server",
  "services": {
    "helloworld": {
      "descriptions": "Service to provide greetings to users.",
      "actions": {
        "sayhello": {
          "provider": "sayhello.js",
          "description": "Issue greeting to the user",
          "parameters": {
            "name": {
              "description": "The name of the person to greet.",
              "required": false
            }
          }
        }
      }
    }
  },
  "interfaces": {
    "api": {
      "type": "interfaces/http/rest",
      "path": "/",
      "endpoints": {
        "/sayhello": {
          "method": "POST",
          "action": "services://helloworld/sayhello"
        }
      }
    }
  }
}