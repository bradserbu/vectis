{
  "name": "helloworld",
  "version": "1.1.0",
  "description": "Hello World Program",
  "types": {
    "Person": {
      "description": "Information about a person.",
      "properties": {
        "Name": {
          "description": "The name of the person.",
          "type": "string",
          "required": true
        }
      }
    }
  },
  "storage": {
    "users-db": {
      "description": "Stores information about users.",
      "fields": {
        "username": {
          "type": "string",
          "unique": true,
          "required": true
        },
        "name": {
          "type": "string",
          "required": true,
          "mappings": [
            "Person.Name"
          ]
        }
      }
    }
  },
  "services": {
    "users-service": {
      "description": "Service to store user information",
      "actions": {
        "add-user": {
          "description": "Adds a user to the system.",
          "parameters": {
            "username": {
              "description": "User information",
              "type": "string",
            }
          }
        },
        "get-user": {},
        "remove-user": {}
      }
    }
  },
  "commands": {
    "sayhello": {
      "provider": "sayhello.js",
      "description": "Say hello to a user.",
      "parameters": {
        "name": {
          "description": "The name of the user (optional).",
          "required": false
        }
      }
    }
  }
}